       {{texto}}

   </div>


{{else}}

{{/each}}



<h4>Nova Postagem:</h4>
<br>
<div class="card">
<div class="card-body">
    <form action="/admin/postagem/nova" method="POST">
        <label for="titulo">
        Titulo:
        </label>
            <input type="text" name="titulo" class="form-control">
        <label class="mt-3" for="slug">
            Slug:
        </label>
            <input type="text" name="slug" class="form-control">
            <label class="mt-3" for="descricao">
            Descrição:
        </label>
            <input type="text" name="descricao" class="form-control">
        <label class="mt-3" for="conteudo">
            Conteudo:
        </label>
        <textarea name="conteudo" class="form-control "></textarea>
        <label for="Categoria">
            <select name="categoria" class="custom-select mt-3">
                {{#each Categoria}}
                    <option value="{{_id}}">
                        {{nome}}
                    </option>
                {{else}}
                    <option value="0">
                        Nenhuma Categoria registrada
                    </option>
                {{/each}}
            </select>
        </label>
        <br>
        <button class="btn btn-success">
            Criar Postagem
        </button>
    </form>
</div>
</div>