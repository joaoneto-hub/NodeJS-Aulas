<h2>Lista de Categorias:</h2>
<hr>

<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each Categoria}}
   <div class="card mt-4">
            <div class="card-body">
                <h3>{{nome}}</h3>
                <small>Slug:{{slug}}</small> <br> <br>
                <a href="/admin/categorias/edit/{{_id}}"><button class="bnt btn-success mt-4">Editar Categoria</button></a>

                <form action="/admin/categorias/deletar" method="POST">
                       <input type="hidden" name="id" value="{{_id}}"> 
                        <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
                </form>
            </div>

       </div>
{{else}}
<h4 class="mt-3">Nenhuma categoria registrada</h4>

{{/each}}